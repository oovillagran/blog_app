<div class="log_in_form">
  <h2>Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.text_field :name, placeholder: 'Username', class: 'field-input' %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'field-input' %>
    </div>
  
    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, placeholder: 'Password (6 characters minimum)', autocomplete: "new-password", class: 'field-input' %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: 'Password confirmation', autocomplete: "new-password", class: 'field-input' %>
    </div>
  
    <div class="actions field">
      <%= f.submit "Sign up", class: 'login-btn' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
