<div class="log_in_form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <div class="field">
      <%= f.text_field :name, placeholder: 'Username', class: 'field-input' %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', class: 'field-input', autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', class: 'field-input', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions field">
      <%= f.submit "Log in", class: 'login-btn' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
