<html>
  <head>
    <%= stylesheet_link_tag 'users_css' %>
  </head>

  <body>
    <header>
      <h1>Here are the details of the user <%= @user.name %></h1>
    </header>
    <main>
      <section>
        <div class="user-list flex-row">
          <div class="img-box">
            <img src="<%= @user.photo %>" alt="user-image" width="96" height="96">
          </div>
          <div class="user-info flex-row">
            <h2 class="user-name"><%= @user.name %></h2>
            <p class="user-posts-number">Number of Posts: <%= @user.posts_counter %></p>
          </div>
        </div>
        <div class="user-bio flex-column">
          <p class="post-align">Bio:</p>
          <p class="post-align"><%= @user.bio %></p>
        </div>

        <h2>This is the List of Posts:</h2>
        <ul class="post-list">
          <% @user.posts.each do |post| %>
            <li class="post-list-item flex-column">
              <h3 class="post-id post-align">Post #<%=  link_to post.id, user_post_path(@user, post) %></h3>
              <h3 class="post-title post-align">Title: <%=  link_to post.title, user_post_path(@user, post) %></h3>
              <p class="post-text post-align"><%= post.text %></p>
              <p class="comments-likes-counter counter-align">
                Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %>
              </p>
            </li>
          <% end %>
        </ul>
        <div class="btn flex-column">
          <button class="see-btn" type="button">See all posts</button>
        </div>
      </section>
    </main>
  </body>
</html>
