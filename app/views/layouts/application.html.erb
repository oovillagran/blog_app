<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  
  <body>
    <% if user_signed_in? %>
      <header>
        <%= link_to "Home", root_path, class: "nav-item" %>
        <%= link_to "New Post", new_user_post_path(user_id: current_user.id), class: "nav-item" %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-item" %>
      </header>
    <% else %>
      <header>
        <%= link_to "Home", root_path, class: "nav-item" %>
        <%= link_to "Sign In", user_session_path, class: "nav-item" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "nav-item" %>
      </header>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
