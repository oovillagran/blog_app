<html>
  <head></head>
  <body>
    <header>
      <h1>
        Create a New Post
      </h1>
    </header>
    <main>
      <section>
        <%= form_with(model: @post, url: posts_path) do |form| %>
          <%= form.label :title %>
          <%= form.text_field :title, required: true %>

          <%= form.label :text %>
          <%= form.text_area :text, required: true %>

          <%= form.submit 'Create Post' %>
        <% end %>
      </section>
    </main>
  </body>
</html>